/**index.wxss**/
.index {
  width: 100%;
  height: 100%;
  position: relative;
  font-size: 28rpx;
  border: 1rpx solid transparent;
}

.index-profile {
  width: 80%;
  margin: 10rpx auto 6rpx auto;
  text-align: center
}
.index-profile-head{
  width: 100%;
  text-align: center
}

.index-profile__img {
  border-radius: 50%;
  width: 30%;
  height: 80rpx;
  margin: 0 0rpx 0 60rpx;
  background-repeat: no-repeat;
  background-size: contain;
  text-align: right
}

.index-profile-font{
  padding: 20rpx 0;
  width:20%;
  font-size: 30rpx;
  text-align: center
}

.index-profile__img-hold {
  text-align: center;
}

.index-profile-nickname {
  width: 50%;
  text-align: left;
  font-size: 30rpx;
  padding: 20rpx 0;
}
.index-button{
  width: 80%;
  /* background: greenyellow; */
  /* padding-bottom: 10rpx; */
  margin-left: 10%;
  align-content: center
}

.index-head{
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  font-weight: 800;
  text-align: center;
  padding-top: 10rpx
}

.index-title {
  width: 60%;
}

.index-nick{
  width: 38%;
}

.index-comments{
  width: 100%;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  font-family: Arial, Helvetica, sans-serif
}

.index-comments-detail{
  width: 60%;
  margin: 0 10rpx 0 10rpx
}

.index-comments-nickname{
  width: 38%;
  margin: 0 10rpx 0 10rpx
}

.index-comments-line{
  /* width:100%; */
  height: 2rpx;
  background: greenyellow;
  margin: 10rpx 10rpx 10rpx 10rpx
}